@model Price

@{
    ViewData["Title"] = "Price Quotation";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="PriceQuotation" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Subtotal" class="form-label">Subtotal: </label>
                <input asp-for="Subtotal" class="form-input" />
                <span asp-validation-for="Subtotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountPercent" class="form-label">Discount Percent: </label>
                <input asp-for="DiscountPercent" class="form-input" />
                <span asp-validation-for="DiscountPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Discount Amount: </label>
                <div class="form-value">@Model.DiscountAmount.ToString("C")</div>
            </div>
            <div class="form-group">
                <label class="form-label">Total: </label>
                <div class="form-value">@Model.Total.ToString("C")</div>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" />
                <a asp-controller="Home" asp-action="PriceQuotation">Clear</a>
            </div>
        </form>
    </div>
</div>